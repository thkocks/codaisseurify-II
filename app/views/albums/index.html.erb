<ul class="sidebar-list">
  <%= link_to "Back", root_path, class: "btn btn-primary" %> <%= link_to "Add new album", new_album_path, class: "btn btn-primary" %>
</ul>
<div class="blocks">
  <% @albums.order_by_title.each do |album| %>
    <div class="box">
      <div class="panel panel-primary">
        <div class="panel-body">
          <div class="row">
            <div class="col-md-7">
              <h4><%= link_to (album.title), album %></h4>
            </div>
            <div class="profile-img-small">
              <%=link_to (image_tag album.image_url), album %>
            </div>
            <div class="col-md-3 right">
            </div>
          </div>
      </div>
    </div>
  <% end %>
</div>
