<%= form_for @album do |f| %>
  <div class="form-group">
    <label>Title</label>
    <%= f.text_field :name, placeholder: "Title", class: "form-control" %>
  </div>

  <div class="form-group">
    <label>Description</label>
    <%= f.text_area :description, rows: 5, placeholder: "Describe yourself", class: "form-control" %>
  </div>

  <div class="form-group">
    <label>Add cover image url</label>
    <%= f.text_field :image_url, placeholder: "Cover image", class: "form-control" %>
  </div>

  <div class="actions">
    <%= f.submit "Save", class: "btn btn-primary" %>
  </div>
<% end %>
