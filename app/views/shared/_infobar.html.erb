<div class="infobar">
  <div class="info-container">

    <div class="search-container">
      <div class="search-bar"><%= form_tag(songs_path, :method => "get", id: "search-form") do %>
        <%= text_field_tag :search, params[:search], placeholder: "Search Song" %>
        <%= submit_tag "Search", :name => nil %>
        <% end %>
      </div>

      <div class="search-bar"><%= form_tag(artists_path, :method => "get", id: "search-form") do %>
        <%= text_field_tag :search, params[:search], placeholder: "Search Artist" %>
        <%= submit_tag "Search", :name => nil %>
        <% end %>
      </div>

      <div class="search-bar"><%= form_tag(albums_path, :method => "get", id: "search-form") do %>
        <%= text_field_tag :search, params[:search], placeholder: "Search Album" %>
        <%= submit_tag "Search", :name => nil %>
        <% end %>
      </div>
    </div>

  </div>
</div>
